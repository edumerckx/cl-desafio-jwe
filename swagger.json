{
  "openapi": "3.0.0",
  "info": {
    "title": "Login API",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "JWE gerado"
          }
        }
      }
    },
    "/decrypt": {
      "post": {
        "summary": "Descriptografa JWE informado",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "encrypted": { "type": "string" }
                },
                "required": ["encrypted"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "JWE descriptografado"
          }
        }
      }
    },
    "/history": {
      "get": {
        "summary": "Listar hist√≥rico de logins efetuados em /login",
        "responses": {
          "200": {
            "description": "Lista registros"
          }
        }
      }
    }
  }
}
